<theme-notification
  class="theme-notification"
  aria-live="assertive"
  aria-atomic="true"
  hidden
>
  <div class="theme-notification-inner">
    <div class="theme-notification-header">
      <h3 class="heading" data-theme-notification-title>
      </h3>
      <button
        type="button"
        class="btn-icon"
        aria-label="{{ 'accessibility.close' | t }}"
        data-theme-notification-close
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x">
          <line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <div class="theme-notification-content">
    </div>
</div>  
</theme-notification>

<div class="visually-hidden" aria-live="assertive" aria-atomic="true" data-theme-announcer></div>
