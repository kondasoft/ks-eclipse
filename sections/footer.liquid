{% stylesheet %}
  .footer {
    background-color: #f5f5f5;
    padding: 40px 20px;
    margin-top: 60px;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
  }

  .footer-column h3 {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 15px;
  }

  .footer-column ul {
    list-style: none;
    padding: 0;
  }

  .footer-column a {
    color: #666;
    text-decoration: none;
    font-size: 14px;
    line-height: 1.8;
  }

  .footer-column a:hover {
    color: #000;
  }

  .footer-bottom {
    text-align: center;
    margin-top: 30px;
    padding-top: 20px;
    border-top: 1px solid #ddd;
    color: #999;
    font-size: 12px;
  }
{% endstylesheet %}

