        "definition": [
          {
            "type": "header",
            "content": "Light theme"
          },
          {
            "type": "color",
            "id": "light_background",
            "label": "Background",
            "default": "#FFFFFF"
          },
          {
            "type": "color_background",
            "id": "light_background_gradient",
            "label": "Background gradient",
            "info": "Background gradient replaces background where possible."
